generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Ticket {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  title     String
  content   String
  status    TicketStatus @default(OPEN)
  bounty    Int
  deadline  String
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  DONE
}
